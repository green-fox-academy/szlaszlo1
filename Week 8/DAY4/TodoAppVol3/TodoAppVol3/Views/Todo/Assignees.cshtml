@model List<Assignee>
@{
    ViewData["Title"] = "Assignees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assignees</h2>
<form action="/addAssignee" method="post">
    <table >
        <tr>
            <td>Name:</td>
            <td><input type="text" name="Name"></td>
        </tr>
        <tr>
            <td>E-mail:</td>
            <td><input type="email" name="Email"></td>
        </tr>
        <tr>
            <td colspan="2"><button type="submit" style="display:block;">Add new Assignee</button></td>
        </tr>
    </table>
</form>
<form action="/removeAssignee" method="post">
    <table class="table table-bordered table-responsive table-hover">
        @foreach (Assignee item in Model)
        {

            <tr>
                <td><input type="radio" name="id" value=@item.Id></td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><a href="/@item.Id/editAssignee">EDIT</a></td>
            </tr>
        }
    </table>
    <button type="submit">Delete selected</button>
</form>
